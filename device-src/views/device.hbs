<div class="container row">
  <div class="col-md-6">
    <div class="card card-default">
      <div class="card-header">
        <div class="row">
          <div class="col-md-6">
            <h3 class="card-title">
              {{device.name}} (ID: {{device.id}})
            </h3>
          </div>
        </div>
      </div>
      <!-- /.card-header -->
      <div class="card-body">
        <div class="callout callout-info row">
          <div class="col-md-6">
            <h4>Name: </h4>
          </div>
          <div class="col-md-6">
            <span class="badge badge-info">{{device.name}}</span>
          </div>
        </div>
        <div class="callout callout-info row">
          <div class="col-md-6">
            <h4>IP Address: </h4>
          </div>
          <div class="col-md-6">
            <a href="http://{{device.ip}}" target="_blank" class="badge badge-info text-light">{{device.ip}}</a>
          </div>
        </div>
        <div class="callout callout-info row">
          <div class="col-md-6">
            <h4>DNS Address: </h4>
          </div>
          <div class="col-md-6">
            <a href="http://{{device.dnsHostname}}" target="_blank" class="badge badge-info text-light">{{device.dnsHostname}}</a>
          </div>
        </div>
        <div class="callout callout-info row">
          <div class="col-md-6">
            <h4>Location: </h4>
          </div>
          <div class="col-md-6">
            <span class="badge badge-info">{{device.location}}</span>
          </div>
        </div>
      </div>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->
  </div>
  <div class="col-md-6">
    <div class="card card-default">
      <div class="card-header">
        <h3 class="card-title">
          Ports: 
        </h3>
      </div>
      <!-- /.card-header -->
      <div class="card-body container">
        {{#each device.ports}}
          <div class="callout callout-info row">
            <div class="col-md-4">
              <h4>Port: {{this.port}}</h4>
            </div>
            <div class="col-md-4">
              <p>Protocol: <span class="badge badge-info">{{this.protocol}}</span></p>
            </div>
            <div class="col-md-4">
              <p><strong>Description:</strong> {{this.desc}}</p>
            </div>
          </div>
        {{/each}}
      </div>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->
  </div>
</div>

            